<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 顶部标题栏 -->  
	<style name="layout_title_bar">  
	  <item name="android:layout_height">@dimen/title_bar_height</item>
	  <item name="android:layout_width">match_parent</item>  
	  <item name="android:background">@color/bg_blue</item>  
	  <item name="android:gravity">center_vertical</item>  
	  <item name="android:orientation">horizontal</item>  
	</style> 
	
	<!-- 设置上标题栏中间文字 -->  
	<style name="button_title_bar_text_center">  
	  <item name="android:layout_width">wrap_content</item>
	  <item name="android:layout_height">wrap_content</item>  
	  <item name="android:layout_centerInParent">true</item>  
	  <item name="android:gravity">center</item>  
	  <item name="android:textSize">20sp</item>  
	  <item name="android:textColor">#ffffffff</item>  
	  <item name="android:background">@null</item>  
	</style> 
	
	<!-- 设置上标题栏左边返回等按钮 -->  
	<style name="button_title_bar_btn_back">  
	  <item name="android:layout_width">wrap_content</item>
	  <item name="android:layout_height">wrap_content</item>  
	  <item name="android:layout_centerVertical">true</item>  
	  <item name="android:layout_alignParentLeft">true</item>  
	  <item name="android:layout_marginLeft">12dp</item>  
	  <item name="android:drawablePadding">2dp</item> 
	  <item name="android:padding">6dp</item>
	  <item name="android:gravity">center</item>  
	  <item name="android:background">@null</item>  
	</style> 
	
	<!-- 设置上标题栏左边返回等按钮 -->  
	<style name="button_title_bar_btn_left">  
	  <item name="android:layout_width">wrap_content</item>
	  <item name="android:layout_height">wrap_content</item>  
	  <item name="android:layout_centerVertical">true</item>  
	  <item name="android:layout_alignParentLeft">true</item>  
	  <item name="android:layout_marginLeft">12dp</item>  
	  <item name="android:drawablePadding">2dp</item> 
	  <item name="android:padding">6dp</item>
	  <item name="android:gravity">center</item>  
	  <item name="android:textSize">14sp</item>  
	  <item name="android:textColor">#ffffffff</item>  
	  <item name="android:background">@drawable/selector_bg_titlebar_button</item>  
	</style> 
	
	<!-- 设置上标题栏右边添加等按钮 -->  
	<style name="button_title_bar_btn_right">  
	  <item name="android:layout_width">wrap_content</item>
	  <item name="android:layout_height">wrap_content</item>  
	  <item name="android:layout_centerVertical">true</item>  
	  <item name="android:layout_alignParentRight">true</item>  
	  <item name="android:layout_marginRight">12dp</item>  
	  <item name="android:drawablePadding">2dp</item>
	  <item name="android:padding">6dp</item>
	  <item name="android:gravity">center</item>  
	  <item name="android:textSize">14sp</item>  
	  <item name="android:textColor">#ffffffff</item>  
	  <item name="android:background">@drawable/selector_bg_titlebar_button</item>  
	</style> 
	
	<!-- 服务分类矩形按钮 -->  
	<style name="product_type_button">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">120dp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@drawable/selector_textcolor_white_lightgray</item>
	</style>
	
	<!-- 产品矩形矩形按钮 -->  
	<style name="main_product_button">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">90dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@drawable/selector_textcolor_white_lightgray</item>
	</style>
	
</resources>
