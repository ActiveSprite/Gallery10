<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.facebucket.FaceActivity" >

    <ImageView
        android:id="@+id/online_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:src="@drawable/no_photo" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/newbuild"
            android:layout_width="0dp"
            android:background="#0000"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/timg" />

        
    </LinearLayout>

    <EditText
        android:id="@+id/facename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/online_img"
        android:layout_centerHorizontal="true"
        android:digits="abcdefghijklmnopqrstuvwxyz0123456789_"
        android:ems="10"
        android:hint="请输入authid"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facename"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="请输入名字" />
  

</RelativeLayout>