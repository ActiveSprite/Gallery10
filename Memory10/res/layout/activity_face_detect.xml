<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imagePhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:src="@drawable/album_default_loading_pic" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/buttonDetect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0000"
            android:src="@drawable/jc"
           />

        <ImageButton
            android:id="@+id/btnGetImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:src="@drawable/xt"
             android:background="#0000"
             />
    </LinearLayout>
 <LinearLayout
     android:orientation="horizontal"
      android:layout_below="@+id/imagePhoto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/mmp"
      android:layout_alignLeft="@+id/imagePhoto"
     >
    <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:text="性别:"
        android:layout_gravity="center"
        >

        <requestFocus />
    </TextView>

    <TextView
        android:id="@+id/textIsMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:gravity="center"
        />
    </LinearLayout>

   
    
    <LinearLayout
     android:orientation="horizontal"
     android:id="@+id/mmp1"
      android:layout_below="@+id/mmp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/imagePhoto"
     >
    <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:text="年龄:"
        android:layout_gravity="center"
        >

        <requestFocus />
    </TextView>

    <TextView
        android:id="@+id/textAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:gravity="center"
        />
    </LinearLayout>
     <LinearLayout
     android:orientation="horizontal"
      android:layout_below="@+id/mmp1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/imagePhoto"
     >
    <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:text="状态:"
        android:layout_gravity="center"
        >

        <requestFocus />
    </TextView>

    <TextView
        android:id="@+id/textState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:gravity="center"
        />
    </LinearLayout>

</RelativeLayout>